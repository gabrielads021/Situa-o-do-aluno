Algoritmo "Situação do aluno"

Var
   nota1, nota2, media: real


Inicio
   escreva("Digite a primeira nota: ")
   leia(nota1)
   escreva("Digite a segunda nota: ")
   leia(nota2)
   media:=(nota1)+(nota2)/2
   se media >= 6 entao
      escreval("Aluno Aprovado!")
   senao
      se media >= 2 entao
         escreval("Aluno em Recuperação!")
      senao
         escreval("Aluno Reprovado!")
      fimse
   fimse

Fimalgoritmo
